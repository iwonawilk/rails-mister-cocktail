<div class="container">
  <div class="row">
    <div class="col-sm-6 offset-sm-3">
      <%= simple_form_for [@cocktail, @dose] do |f| %>
        <%= f.input :description %>
        <%= f.association :ingredient %>
        <%= f.submit "Add Dose", class: "btn btn-primary" %>
        <%= link_to "Back to list", cocktail_path(@cocktail), class: "btn btn-warning" %>
      <% end %>
    </div>
  </div>
</div>

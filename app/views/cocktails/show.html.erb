<h1><%= @cocktail.name %></h1>
<% @cocktail.doses.each do |dose| %>
  <li><%= dose.description %> - <%= dose.ingredient.name %>
    <%= link_to(dose_path(dose), method: :delete) do %>
    <i class="fas fa-trash"></i>
    <% end %>
  </li>
<% end %>
<%= link_to "Add a new dose", new_cocktail_dose_path(@cocktail), class: 'btn btn-success' %>
<%= link_to "Back to list", cocktails_path, class: 'btn btn-success' %>


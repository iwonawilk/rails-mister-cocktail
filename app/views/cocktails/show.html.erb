
<div class="container card-product my-2">
  <div class="card-product-image" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path @cocktail.picture %>')">
    <h1 class="text-center"><%= @cocktail.name %></h1>
  </div>
  <div class="container card-product-infos">
    <h2 class="pb-4">Ingredients:</h2>
      <% @cocktail.doses.each do |dose| %>
        <div class="container d-flex justify-content-between border align-items-center p-1">
          <p><%= dose.ingredient.name %>: <%= dose.description %></p>
          <div>
              <%= link_to(dose_path(dose), method: :delete) do %>
              <i class="fas fa-trash green"></i>
              <% end %>
          </div>
        </div>
      <% end %>
      <div class="my-4">
        <%= render 'doses/new', cocktail: @cocktail, dose: @dose %>
      </div>
  </div>
  <div id="card-buttons">
    <%= link_to "Back to cocktails", cocktails_path, class: 'btn btn-success' %>
  </div>
</div>

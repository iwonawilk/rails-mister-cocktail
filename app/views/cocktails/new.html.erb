<div class="container">
  <div class="row">
    <div class="col-sm-6 offset-sm-3">
      <%= simple_form_for(@cocktail) do |f| %>
        <%= f.input :name %>
        <%= f.input :picture %>
        <%= f.submit "Add Cocktail", class: "btn btn-success" %>
        <%= link_to "Back to list", cocktails_path, class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>
